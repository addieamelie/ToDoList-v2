<%- include("header") -%>
        <div class="box" id="heading"> 
            <h1> <%= listTitle %> </h1>
        </div>

        <div class="box">

           <% newListItems.forEach((item)=>{ %>
           <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name = "checkbox" 
                    value = "<%= item._id %>" onChange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
            </form>
           <% }) %>


           <form class ="item" action="/" method="POST">
            <input type="text" name="newItem" autocomplete="off" placeholder="New list item">
             <!-- value of button is dynamic to tell which list item was added to   -->
           <button type="submit" name="list" value= "<%= listTitle %>">+</button>  
            </form>
        </div>
        <%- include("footer") -%>
